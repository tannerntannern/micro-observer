{
  "name": "micro-observer",
  "version": "0.0.13",
  "description": "Utilizes ES6 Proxies to easily observe and validate changes on nested objects.",
  "main": "dist/observer.js",
  "types": "dist/observer.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "npm run build -- -w",
    "lint": "eslint src/**/*.ts",
    "version": "npm run build",
    "test": "nyc mocha --recursive -r ts-node/register test/**/*.test.*",
    "coverage": "nyc report",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "./src/**/*.ts"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true
  },
  "author": "Tanner Nielsen",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.5",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.10.2",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "typescript-eslint-parser": "^18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tannerntannern/micro-observer.git"
  }
}
